<h1>New article</h1>
<%=javascript_include_tag "kindeditor"%>
<script type="text/javascript">
       KE.show({
           id : 'content_1'
       });
   </script>
<% form_for(:article,:url=>category_articles_path(@category)) do |f| %>
  <%= f.error_messages %>

  <p>
    <label for="article_title">标题</label>
    <%= f.text_field :title %>
  </p>
  <p>
    <label for="article_content">内容</label><br />
    <%= f.text_area :content,:id=>"content_1",:style=>"width:560px;height:300px;visibility:hidden;" %>
  </p>
  <p>
    <label for="article_category_id">选择文章分类：</label><br />
    <%= f.select :category_id,Category.find(:all).collect {|p| [p.name,p.id]} %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', category_articles_path(@category) %>
