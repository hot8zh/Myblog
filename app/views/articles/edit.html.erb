<h1>Editing article</h1>
<%=javascript_include_tag "kindeditor"%>
<script type="text/javascript">
       KE.show({
           id : 'content_1'
       });
   </script>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <label for="article_content">内容</label><br />
    <%= f.text_area :content,:id=>"content_1",:style=>"width:600px;height:300px;visibility:hidden;" %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>